</cover-view> -->
<cover-view class='plusDiv'>
  <cover-image class="img" src="/imgs/plus.png"  bindtap="controltap" id='plus'/>
</cover-view> -->
<cover-view class='reduceDiv'>
  <cover-image class="img" src="/imgs/reduce.png"  bindtap="controltap" id='reduce'/>
</cover-view> -->
<!-- 路线规划 -->
<cover-view class='routeDiv'>
  <cover-image class="zoom" src="/imgs/route.png"  bindtap="controltap" id='selectPoint'/>
</cover-view>
<!-- 用户信息 -->
<cover-view class='user'>
  <cover-image class="img" src="/imgs/user.png"  bindtap="controltap" id='user'/>
</cover-view>
</map>
